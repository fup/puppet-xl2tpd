[global]
listen-addr = <%= @listen_addr %>
port = <%= @listen_port %>
<% if scope.lookupvar('xl2tpd::params::debug') == true -%>
debug tunnel = yes
<% end -%>

[lns default]
pppoptfile = /etc/ppp/options.xl2tpd
refuse chap = yes
require pap = yes
ip range = <%= @ip_range.join('-') %>
local ip = <%= @local_ip %>
assign ip = <%= @assign_ip %>
require authentication =  <%= @require_authentication %>
name = <%= @server_name %>
length bit = <%= @length_bit %>
<% if scope.lookupvar('xl2tpd::params::debug') == true -%>
ppp debug = yes
<% end -%>
